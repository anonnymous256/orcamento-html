<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="images/Logo/Logo2.jpg" type="image/x-icon">
  <title>Gerenciar Orçamentos</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="stylesheets/Drawer/Orcamentos/SemMedida.css">
</head>

<body>
  <header>
    <div class="header-left">
      <i class="fa-solid fa-arrow-left" onclick="window.history.back()"></i>
      <h1>Gerenciar Orçamentos</h1>
    </div>
    <div class="header-right">
      <i id="btn-converter" class="fa-solid fa-file-pdf"></i>
    </div>
  </header>

  <div class="container">
    <section class="form-section">
      <div class="section-header">
        <i class="fas fa-clipboard-list"></i>
        <h2>Cadastro de Serviços</h2>
      </div>

      <div class="form-container">
        <div class="form-group">
          <label for="clientes"><i class="fas fa-user"></i> Cliente:</label>
          <select name="clientes" id="clientes">
            <!-- Opções serão carregadas dinamicamente -->
          </select>
        </div>

        <div class="form-group">
          <label for="descricao"><i class="fas fa-tasks"></i> Descrição do Serviço:</label>
          <input type="text" id="descricao" placeholder="Ex: Instalação de portão automático" required>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="unidade"><i class="fas fa-tag"></i> Preço por Unidade (R$):</label>
            <input type="number" id="unidade" step="0.01" placeholder="0,00" required>
          </div>

          <div class="form-group">
            <label for="quantidade"><i class="fas fa-sort-amount-up"></i> Quantidade:</label>
            <input type="number" id="quantidade" placeholder="1" min="1" required>
          </div>
        </div>

        <div class="form-group">
          <label for="observacao"><i class="fas fa-comment"></i> Observação:</label>
          <textarea id="observacao" rows="3" placeholder="Informações adicionais sobre o serviço (opcional)"></textarea>
        </div>

        <div class="form-group">
          <button id="addServico" class="btn-primary"><i class="fas fa-plus"></i> Adicionar Serviço</button>
        </div>
      </div>
    </section>

    <section class="services-section">
      <div class="section-header">
        <i class="fas fa-tools"></i>
        <h2>Serviços Adicionados</h2>
      </div>
      
      <div class="services-list" id="servicesList">
        <!-- Serviços serão adicionados aqui dinamicamente -->
      </div>

      <div class="total-container">
        <div class="total-value">
          <span>Total do Orçamento:</span>
          <span id="totalValue">R$ 0,00</span>
        </div>
      </div>

      <div class="form-group">
        <button id="generatePdf" class="btn-success"><i class="fas fa-file-pdf"></i> Gerar Orçamento em PDF</button>
      </div>
    </section>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="javascripts/Drawer/Orcamentos/SemMedida.js" type="module"></script>

  <!-- Script para tornar as funções de editar e excluir serviços acessíveis globalmente -->
  <script>
    window.editService = function(index) {
      // Esta função será definida no arquivo SemMedida.js
      // Está aqui apenas para facilitar o acesso global à função
    }

    window.deleteService = function(index) {
      // Esta função será definida no arquivo SemMedida.js
      // Está aqui apenas para facilitar o acesso global à função
    }
  </script>
</body>

</html>