<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Empresa</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        /* Estilos gerais */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            min-height: 100vh;
            flex-direction: column;
        }

        .container {
            width: 100%;
            max-width: 800px;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin: 20px;
            overflow: hidden;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        .input-group {
            margin: 15px 0;
        }

        .input-group label {
            display: block;
            font-weight: bold;
            color: #333;
            margin-bottom: 8px;
        }

        .input-group input,
        .input-group textarea {
            width: 100%;
            padding: 12px;
            margin: 8px 0;
            border-radius: 5px;
            border: 1px solid #ddd;
            font-size: 16px;
        }

        .input-group input[type="file"] {
            padding: 5px;
        }

        button {
            width: 100%;
            padding: 14px;
            background-color: #1976d2;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
        }

        button:hover {
            background-color: #155a9e;
        }

        .company-info {
            margin-top: 30px;
            padding: 20px;
            background-color: #f8f8f8;
            border-radius: 8px;
            text-align: center;
        }

        .company-info h3 {
            color: #333;
            margin-bottom: 15px;
        }

        .company-info p {
            font-size: 16px;
            margin: 5px 0;
            color: #555;
        }

        .company-info .logo-container {
            margin-top: 15px;
        }

        .company-info .logo-container img {
            max-width: 150px;
            border-radius: 50%;
        }

        /* Responsividade */
        @media (max-width: 768px) {
            .container {
                padding: 15px;
            }

            button {
                font-size: 16px;
                padding: 12px;
            }

            .input-group input,
            .input-group textarea {
                font-size: 14px;
                padding: 10px;
            }

            .company-info p {
                font-size: 14px;
            }
        }

        @media (max-width: 480px) {
            .container {
                padding: 10px;
                width: 100%;
            }

            h2 {
                font-size: 24px;
                margin-bottom: 15px;
            }

            .input-group input,
            .input-group textarea {
                font-size: 14px;
                padding: 10px;
                box-sizing: border-box;
            }

            .input-group {
                margin-bottom: 10px;
            }

            button {
                font-size: 16px;
                padding: 12px;
            }

            .company-info h3 {
                font-size: 18px;
            }

            .company-info p {
                font-size: 14px;
            }

            .company-info .logo-container img {
                max-width: 100px;
            }
        }

        /* Scroll para o formulário */
        .form-container {
            max-height: 80vh;
            overflow-y: auto;
            margin-bottom: 20px;
        }
        
        header {
            width: 100%;
            background-color: #1976d2; 
            color: white;
            position: relative;
            padding: 15px;
            font-size: 24px;
            font-weight: bold;
            display: flex;
            justify-content: center;
            align-items: center;
            padding-left: 40px;
        }

        header button {
            position: absolute;
            left: -450px; 
            color:black;
            top: 10%; 
            background-color: transparent;
            border: none; 
            font-size: 24px;
            cursor: pointer;
            transition: all 0.3s ease;
            padding: 5px; 
            outline: none; 
          }
          
          button:hover {
            color: white; 
            background-color: rgba(0, 0, 0, 0.1); 
            transform: scale(1.1); 
          }
          
          button:focus {
            outline: none; 
          }
          
          button:active {
            transform: scale(0.95); 
          }
    </style>
</head>

<body>

    <header>
        <button class ="fas fa-arrow-left" onclick="window.history.back()"></button>Cabeçalho
    </header>
    <div class="container">
        <h2>Cadastrar Empresa</h2>

        <!-- Formulário dentro de um container rolável -->
        <div class="form-container">
            <form id="company-form">
                <div class="input-group">
                    <label for="nome">Nome:</label>
                    <input type="text" id="nome" placeholder="Nome da empresa" required>
                </div>
                <div class="input-group">
                    <label for="cnpj">CNPJ:</label>
                    <input type="text" id="cnpj" placeholder="Digite o CNPJ da empresa" required>
                </div>
                <div class="input-group">
                    <label for="endereco">Endereço:</label>
                    <input type="text" id="endereco" placeholder="Digite o endereço da empresa" required>
                </div>
                <div class="input-group">
                    <label for="telefone">Telefone:</label>
                    <input type="text" id="telefone" placeholder="Digite o telefone da empresa" required>
                </div>
                <div class="input-group">
                    <label for="razao-social">Razão Social:</label>
                    <input type="text" id="razao-social" placeholder="Digite a razão social da empresa" required>
                </div>
                <div class="input-group">
                    <label for="instagram">Instagram:</label>
                    <input type="text" id="instagram" placeholder="Digite o Instagram da empresa" required>
                </div>
                <div class="input-group">
                    <label for="logo">Escolher logo:</label>
                    <input type="file" id="logo" accept="image/*" required>
                </div>

                <button type="button" id="submit-btn">Cadastrar Empresa</button>
            </form>
        </div>

        <div class="company-info">
            <h3>Informações da Empresa</h3>
            <p id="empresa-nome">Nome: Não disponível</p>
            <p id="empresa-cnpj">CNPJ: Não disponível</p>
            <p id="empresa-endereco">Endereço: Não disponível</p>
            <p id="empresa-telefone">Telefone: Não disponível</p>
            <p id="empresa-razao-social">Razão Social: Não disponível</p>
            <p id="empresa-instagram">Instagram: Não disponível</p>
            <div class="logo-container">
                <img id="logo-preview" class="logo-preview" src="" alt="Logo da Empresa">
            </div>
        </div>
    </div>

    <script type="module">
        // Importar os módulos necessários do Firebase
        import { initializeApp } from "https://www.gstatic.com/firebasejs/9.16.0/firebase-app.js";
        import { getAuth, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/9.16.0/firebase-auth.js";
        import { getFirestore, doc, setDoc, updateDoc, collection, query, where, getDocs } from "https://www.gstatic.com/firebasejs/9.16.0/firebase-firestore.js";

        // Configuração do Firebase
        const firebaseConfig = {
            apiKey: "AIzaSyCm0bhy9OSaZ83OTO0-JQpICl9WMwPc_fk",
            authDomain: "orcamento-html.firebaseapp.com",
            projectId: "orcamento-html",
            storageBucket: "orcamento-html.appspot.com",
            messagingSenderId: "363402110339",
            appId: "1:363402110339:web:b7339cfc945f63a06fc2b6",
            measurementId: "G-ZMY6CHL8QW"
        };

        // Inicializar o Firebase
        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);
        const db = getFirestore(app);

        // Função para verificar o estado de autenticação do usuário
        onAuthStateChanged(auth, (user) => {
            if (user) {
                console.log("Usuário logado:", user);
                window.loggedUser = user;
                loadCompanyData(user.uid);  // Carregar os dados da empresa
            } else {
                alert("Você precisa estar logado para visualizar os dados da empresa.");
                window.location.replace('/login'); // Redireciona para a página de login
            }
        });

        // Função para carregar os dados da empresa
        async function loadCompanyData(userId) {
            const q = query(collection(db, "empresas"), where("userId", "==", userId));
            const querySnapshot = await getDocs(q);
            if (querySnapshot.empty) {
                console.log("Nenhuma empresa encontrada para este usuário.");
                return;
            }

            querySnapshot.forEach((doc) => {
                const data = doc.data();
                document.getElementById("empresa-nome").textContent = "Nome: " + data.nome;
                document.getElementById("empresa-cnpj").textContent = "CNPJ: " + data.cnpj;
                document.getElementById("empresa-endereco").textContent = "Endereço: " + data.endereco;
                document.getElementById("empresa-telefone").textContent = "Telefone: " + data.telefone;
                document.getElementById("empresa-razao-social").textContent = "Razão Social: " + data.razaoSocial;
                document.getElementById("empresa-instagram").textContent = "Instagram: " + data.instagram;
                if (data.logo) {
                    document.getElementById("logo-preview").src = data.logo;
                }
            });
        }

        // Função para salvar ou atualizar os dados da empresa
        async function saveCompany(nome, cnpj, endereco, telefone, razaoSocial, instagram, logoUrl) {
            const userId = window.loggedUser.uid;
            const empresaData = {
                nome,
                cnpj,
                endereco,
                telefone,
                razaoSocial,
                instagram,
                logo: logoUrl || "",
                userId,
            };

            const empresaRef = doc(db, "empresas", userId);
            await setDoc(empresaRef, empresaData, { merge: true });

            loadCompanyData(userId); // Atualiza os dados exibidos
        }

        // Função chamada quando o formulário é enviado
        async function submitForm() {
            const nome = document.getElementById("nome").value;
            const cnpj = document.getElementById("cnpj").value;
            const endereco = document.getElementById("endereco").value;
            const telefone = document.getElementById("telefone").value;
            const razaoSocial = document.getElementById("razao-social").value;
            const instagram = document.getElementById("instagram").value;
            const logoInput = document.getElementById("logo");
            let logoUrl = "";

            if (logoInput.files.length > 0) {
                const file = logoInput.files[0];
                // Convertendo a imagem para Base64
                const reader = new FileReader();
                reader.onloadend = function () {
                    logoUrl = reader.result;  // Aqui o logoUrl é a string Base64
                    saveCompany(nome, cnpj, endereco, telefone, razaoSocial, instagram, logoUrl);
                };
                reader.readAsDataURL(file);  // Converte a imagem
            } else {
                saveCompany(nome, cnpj, endereco, telefone, razaoSocial, instagram, logoUrl);
            }
        }

        // Atribuindo a função ao botão
        document.getElementById("submit-btn").onclick = submitForm;
    </script>
</body>

</html>
